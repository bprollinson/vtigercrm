<window xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
	title="vtigerCRM Create Account"
	id="vtigercrmaccountconfig"
	onload="get_vtigercrmconfig()"
	style="padding-top:0px; padding-left:0px; padding-right:0px;">
	
	<script type="application/x-javascript" src="chrome://vtiger/content/vtigercrm_toolbar.js"/>


<vbox flex="1" style="margin:5px">
	<!--<groupbox flex="1">-->
	<caption style="font-weight: bold" label="vtigerCRM Create Account"/>
	   <vbox>
		   <groupbox flex="1">
			   <caption label="Account Information"/>
			   <grid flex="1">
				   <columns>
					   <column flex="1"/>
					   <column flex="3"/>
					  
				   </columns>
				   <rows>
					   <row>
						<hbox>
		 				   <spacer flex="1"/>
						   <label style="color:red" value="*"/>
						   <label value="Account Name:" style="padding: 0px;margin-top: 3px;" />
						   <hbox style="width: 20em">
			                                  <textbox id="txtaccount_name" flex="1"/>
						   </hbox>
				  		</hbox>
					   </row>
					   <row>
						<hbox>
		 				   <spacer flex="1"/>
						   <label value="Email:" style="padding: 0px;margin-top: 3px;" />
						   <hbox style="width: 20em">
							   <textbox id="txtaccount_email" flex="1"/>
						   </hbox>
				   		</hbox>
					   </row>
					   <row>
						<hbox>
		 				   <spacer flex="1"/>
						   <label value="Phone:" style="padding: 0px;margin-top: 3px;" />
						   <hbox style="width: 20em">
							   <textbox id="txtaccount_phone" flex="1"/>
						   </hbox>
					        </hbox>
					   </row>
			 	 </rows>	   
		   	   </grid>
		   </groupbox>
		  
		   
		<groupbox flex="1">
			   <caption label="Address Information"/>
			   <grid flex="1">
				   <columns>
					   <column flex="1"/>
					   <column flex="3"/>
				   </columns>
				   <rows>
					   <row>
						 <hbox>
		 				   <spacer flex="1"/>
						   <label value="Billing Street:" style="padding: 0px;margin-top: 3px;" />
						   <hbox style="width: 20em">
			                                 <textbox id="txtaccount_street" flex="1" multiline="true" rows="2"/>
						   </hbox>
				   		 </hbox>
					   </row>		 
					   <row>
						<hbox>
		 				   <spacer flex="1"/>
						   <label value="Billing City:" style="padding: 0px;margin-top: 3px;" />
						   <hbox style="width: 20em">
			                                  <textbox id="txtaccount_city" flex="1" multiline="false"/>
						  </hbox>
				                </hbox>
					   </row>
					   <row>
						<hbox>
		 				  <spacer flex="1"/>
						  <label value="Billing State:" style="padding: 0px;margin-top: 3px;" />
		  			 	  <hbox style="width: 20em">
			                 		<textbox id="txtaccount_state" flex="1" />
						  </hbox>
				  		</hbox>
					   </row>
					   <row>
						<hbox>
		 				  <spacer flex="1"/>
		 		        	  <label value="Billing Code:" style="padding: 0px;margin-top: 3px;" />
		 			 	  <hbox style="width: 20em">
			 			 	<textbox id="txtaccount_code" flex="1"/>
   	                                          </hbox>
	                                        </hbox>
					    </row>	
					    <row>
						<hbox>
		 				  <spacer flex="1"/>
						  <label value="Billing Country:" style="padding: 0px;margin-top: 3px;" />
		 			 	  <hbox style="width: 20em">
			 				<textbox id="txtaccount_country" flex="1"/>
						  </hbox>	   
				                </hbox>
				           </row>
				   </rows>
			   </grid>
		   </groupbox> 
	</vbox>
	<!--</groupbox>-->
	<hbox align="left">
		  <spacer flex="1"/>
		  <hbox style="width:25em">
			  <label style="color:red" value="*"/>
			  <label value="Indicates mandatory fields"/>
		  </hbox>
	</hbox>		  
	<hbox id="commandbar" flex="1" align="right">
		<hbox>
			<button label="Add as Account" oncommand="add_account_to_vtigercrm();"/>
			<button label="Cancel" oncommand="window.close();"/>
		</hbox>
	</hbox>
</vbox>
</window>
